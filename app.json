{
  "expo": {
    "name": "ability",
    "slug": "uzi13-ability-chatbot-2026",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ability_logo.jpg",
    "scheme": "abilitychatbot",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "backgroundColor": "#1F2937",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.abilityapp.chatbot",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow Ability Chatbot to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow Ability Chatbot to access your microphone for speech recognition."
      }
    },
    "android": {
      "package": "com.abilityapp.chatbot",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/ability_logo.jpg",
        "backgroundImage": "./assets/images/ability_logo.jpg",
        "monochromeImage": "./assets/images/ability_logo.jpg"
      },
      "permissions": [
        "RECORD_AUDIO",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/ability_logo.jpg"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/ability_logo.jpg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow Ability Chatbot to access your microphone for voice recording."
        }
      ],
      "expo-web-browser",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow Ability Chatbot to access your microphone for speech recognition.",
          "speechRecognitionPermission": "Allow Ability Chatbot to use speech recognition."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "ea8b4038-67ff-4574-8b5a-3ffedfa2c1e2"
      }
    }
  }
}
